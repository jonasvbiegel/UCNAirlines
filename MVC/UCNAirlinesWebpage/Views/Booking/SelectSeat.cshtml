        flex-direction: column;
        gap: 10px;
    }

    .seat.row {
        display: flex;
        gap: 10px;
    }

    .seat-gap {
        display: inline-block;
        width: 30px;
    }

    .seat {
        width: 40px;
        height: 40px;
        background-color: lightgray;
        border: none;
        border-radius: 3px;
        font-weight: bold;
        cursor: pointer;
