        string date = "04/24/2025 20:00";
        string seatName = "1A";
        // string newValue = "true";
        boolean newValue = true;

        client.DefaultRequestHeaders.Clear();
        client.DefaultRequestHeaders.Add("depart", date);
        client.DefaultRequestHeaders.Add("seatName", seatName);
        client.DefaultRequestHeaders.Add()
        //Act
        //
        //Assert
    }
}
